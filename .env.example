# Obsidian MCP Server Configuration

# =============================================================================
# VAULT CONFIGURATION
# =============================================================================
# Multiple vaults in JSON format: {"vault_name": "/path/to/vault"}
# Example: VAULTS={"personal": "/home/user/Documents/PersonalVault", "work": "/home/user/Documents/WorkVault"}
VAULTS={"personal": "/path/to/your/vault"}

# Docker volume mounts (format: /host/path:/container/path:ro)
# The :ro flag makes vaults read-only inside container (recommended for safety)
VAULT_MOUNT_1=./my-vault:/vaults/personal:ro
VAULT_MOUNT_2=./work-vault:/vaults/work:ro
VAULT_MOUNT_3=

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Port for MCP server to listen on
MCP_PORT=8080

# Enable/disable authentication
MCP_AUTH_ENABLED=false

# API token for authentication (required if MCP_AUTH_ENABLED=true)
# Generate a secure token: openssl rand -hex 32
MCP_AUTH_TOKEN=your-secret-token-here

# =============================================================================
# COMMAND EXECUTION SETTINGS
# =============================================================================
# Command execution timeout in seconds
COMMAND_TIMEOUT=30

# Maximum output size in characters (output truncated from beginning if exceeded)
MAX_OUTPUT_SIZE=100000

# =============================================================================
# COMMAND WHITELIST SETTINGS
# =============================================================================
# Enable/disable command whitelist
WHITELIST_ENABLED=true

# Path to whitelist file (relative to working directory)
WHITELIST_PATH=whitelist.txt

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file (directory will be created if it doesn't exist)
LOG_PATH=logs/obsidian-mcp.log

# =============================================================================
# GITHUB REPOSITORY (for Docker Compose image reference)
# =============================================================================
# Format: owner/repo (e.g., "username/obsidian-mcp")
# Used to pull the correct image from GitHub Container Registry
GITHUB_REPOSITORY=owner/obsidian-mcp
